{
    "schema": "http://json-schema.org/draft-07/schema#",

    "definitions": {
        "layers": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1,
                "uniqueItems": true
            }
        },
        "targets": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1,
                "uniqueItems": true
            }
        },
        "notes": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1
            }
        },
        "local.conf": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1,
                "uniqueItems": true
            }
        },
        "not-empty-string": {
            "type": "string",
            "minLength": 1,
            "uniqueItems": true
        }
    },

    "properties": {
        "sources": {
            "type": "array",
            "items": {
                "properties": {
                    "method": {
                        "type": "string",
                        "minLength": 1,
                        "enum": ["git", "ignore"]
                    },

                    "url": {
                        "anyOf": [
                            {
                                "type": "string",
                                "pattern": "^(https?|ssh|git)://.*$"
                            },
                            {
                                "type": "string",
                                "pattern": ".*@.*:.*\\.git$"
                            }
                        ]
                    },

                    "branch": {
                        "type": "string",
                        "minLength": 1
                    },

                    "rev": {
                        "type": "string",
                        "minLength": 1
                    },

                    "dir": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "required": ["url"],
                "additionalProperties": false
            }
        },

        "layers": {
            "$ref": "#/definitions/layers"
        },

        "local.conf": {
            "$ref": "#/definitions/local.conf"
        },

        "base-distribution": {
            "type": "object",
            "properties": {
                "distro-name": {
                    "$ref": "#/definitions/not-empty-string"
                },
                "base-directory": {
                    "$ref": "#/definitions/not-empty-string"
                },
                "build-script": {
                    "$ref": "#/definitions/not-empty-string"
                },
                "template-conf": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/not-empty-string"
                    }
                },
                "default-conf-version": {
                    "$ref": "#/definitions/not-empty-string"
                },
                "layer-conf-name": {
                    "$ref": "#/definitions/not-empty-string"
                },
                "layer-conf-version": {
                    "$ref": "#/definitions/not-empty-string"
                },
                "package-classes": {
                    "$ref": "#/definitions/not-empty-string"
                },
                "default-bitbake-major-version": {
                    "$ref": "#/definitions/not-empty-string"
                },
                "bitbake-init-file": {
                    "$ref": "#/definitions/not-empty-string"
                }
            },
            "additionalProperties": false
        },

        "builds": {
            "type": "object",

            "patternProperties": {
                ".+": {
                    "properties": {
                        "inherit": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "minLength": 1
                            },
                            "uniqueItems": true
                        },

                        "target": {
                            "anyOf": [
                                {
                                    "type": "string",
                                    "minLength": 1
                                },
                                {
                                    "$ref": "#/definitions/targets"
                                }
                            ]
                        },

                        "layers": {
                            "$ref": "#/definitions/layers"
                        },

                        "local.conf": {
                            "$ref": "#/definitions/local.conf"
                        },

                        "notes": {
                            "$ref": "#/definitions/notes"
                        }
                    },
                    "additionalProperties": false
                }
            }
        },

        "notes": {
            "$ref": "#/definitions/notes"
        }
    },
    "required": ["sources", "builds"],
    "additionalProperties": false
}
