{
    "schema": "http://json-schema.org/draft-07/schema#",

    "definitions": {
        "layers": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1,
                "uniqueItems": true
            }
        },
        "notes": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1
            }
        },
        "local.conf": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1,
                "uniqueItems": true
            }
        }
    },

    "properties": {
        "sources": {
            "type": "array",
            "items": {
                "properties": {
                    "method": {
                        "type": "string",
                        "minLength": 1,
                        "enum": ["git", "ignore"]
                    },

                    "url": {
                        "type": "string",
                        "pattern": "^(https?|ssh|git)://.*$"
                    },

                    "branch": {
                        "type": "string",
                        "minLength": 1
                    },

                    "rev": {
                        "type": "string",
                        "minLength": 1
                    },

                    "dir": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "required": ["url"],
                "additionalProperties": false
            }
        },

        "layers": {
            "$ref": "#/definitions/layers"
        },

        "local.conf": {
            "$ref": "#/definitions/local.conf"
        },

        "builds": {
            "type": "object",

            "patternProperties": {
                ".+": {
                    "properties": {
                        "inherit": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "minLength": 1
                            },
                            "uniqueItems": true
                        },

                        "target": {
                            "type": "string",
                            "minLength": 1
                        },

                        "layers": {
                            "$ref": "#/definitions/layers"
                        },

                        "local.conf": {
                            "$ref": "#/definitions/local.conf"
                        },

                        "notes": {
                            "$ref": "#/definitions/notes"
                        }
                    },
                    "additionalProperties": false
                }
            }
        },

        "notes": {
            "$ref": "#/definitions/notes"
        }
    },
    "required": ["sources", "builds"],
    "additionalProperties": false
}
