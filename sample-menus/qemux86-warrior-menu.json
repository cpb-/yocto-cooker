{
	"notes" : [
		"Please refer to the README file for instruction on how to build the image"
	],
	"sources" : [
		{ "url": "git://git.yoctoproject.org/poky", "branch": "warrior", "commit": "warrior-21.0.3" },
		{ "url": "git://git.openembedded.org/meta-openembedded", "branch": "warrior", "commit": "a24acf94d48d635eca668ea34598c6e5c857e3f8" }
	],

	"layers" : [
		"poky/meta",
		"poky/meta-poky",
		"poky/meta-yocto-bsp",
		"meta-openembedded/meta-oe"
	],

	"targets" : {

		"qemu-x86": {

			"notes" : [
				" The default `core-image-base` image for qemu x86 emulation"
			],

			"image" : "core-image-base",

			"layers" : [
			],

			"local.conf": [
				"MACHINE                    = 'qemux86'            ",
				"INHERIT                   += 'extrausers'              ",
				"EXTRA_IMAGE_FEATURES      += 'read-only-rootfs'        "
			]
		}
	}
}
